@model IEnumerable<FitApp.Models.Workouts>
@{
    ViewData["Title"] = "Workouts Unit Test";
}
<h2>Workouts Unit Test</h2>
<p>This Test page is designed to test the CRUD operations on workouts, using <br />
in-memory instead of affecting the database. Its purpose is to isolate testing <br />
environment with production environment.</p>
<a asp-action="Create">Create New</a>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Calories Burned</th>
            <th>Duration</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var workout in Model)
        {
            <tr>
                <td>@workout.Name</td>
                <td>@workout.Description</td>
                <td>@workout.CaloriesBurned</td>
                <td>@workout.Duration</td>
                <td>
                    <a asp-action="Details" asp-route-id="@workout.Id">Details</a> |
                    <a asp-action="Edit" asp-route-id="@workout.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@workout.Id">Delete</a>
                    <a asp-action="SaveWorkout" asp-route-id="@workout.Id">Save Workout</a>
                </td>
            </tr>
        }
    </tbody>
</table>
