@model IEnumerable<FitApp.Models.Workouts>

@{
    ViewData["Title"] = "Welcome to FitApp";
}

<div class="fullscreen-container">
    <div class="jumbotron text-center">
        <h1 class="display-4">Welcome to FitApp</h1>
        <p class="lead">Your ultimate fitness companion to track and manage your workouts.</p>
        <hr class="my-4">
        <p>Whether you are just starting or are a seasoned athlete, FitApp helps you stay on top of your fitness goals.</p>
        <div class="start-buttons">
            <a class="btn btn-success btn-lg" asp-action="Index" asp-controller="Workouts">View Workouts</a>
            <a class="btn btn-success btn-lg" asp-action="Create" asp-controller="Workouts">Create New Workout</a>
        </div>
    </div>
</div>

<div class="container">
    <h2>Featured Workouts</h2>
    <div class="row">
        @if (Model != null && Model.Any())
        {
            @foreach (var workout in Model.Take(3))
            {
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">@workout.Name</h5>
                            <p class="card-text">@workout.Description</p>
                            <a asp-action="Details" asp-route-id="@workout.Id" asp-controller="Workouts" class="btn btn-info">View Details</a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <p>No workouts available at the moment. Please check back later.</p>
        }
    </div>
</div>

<div class="container text-center mt-5">
    <h2>About FitApp</h2>
    <p>FitApp is designed to help you keep track of your fitness journey. Create, manage workouts and monitor your progress.</p>
    <a class="btn btn-secondary" href="#">Learn More</a>
</div>
